            </Frame>
        </Grid>
        
        <!--Keyboard-->
        <VerticalStackLayout>
            <Entry x:Name="UserInput" TextColor="White" WidthRequest="100" HorizontalTextAlignment="Center" IsVisible="False" IsEnabled="False" MaxLength="5" Placeholder="-----">
                <Entry.Keyboard>
                    <Keyboard x:FactoryMethod="Create">
                        <x:Arguments>
                            <KeyboardFlags>CapitalizeCharacter</KeyboardFlags>
                        </x:Arguments>
                    </Keyboard>
                </Entry.Keyboard>
            </Entry>
            <!--New word button-->
            <Button x:Name="NewWord" Text="New Word" Clicked="NewWord_Clicked" WidthRequest="100" Margin="8"></Button>
            <!--Enter button-->
            <Button x:Name="EnterButton" Text="Enter" Clicked="EnterButton_Clicked" WidthRequest="100" Margin="8" IsVisible="False" IsEnabled="False"></Button>
            <!--Reset button-->
            <Button x:Name="ResetButton" Text="Reset Game" Clicked="ResetGame_Clicked" WidthRequest="100" Margin="8" IsVisible="False" IsEnabled="False"></Button>
            
        </VerticalStackLayout>
        
    </VerticalStackLayout>

</ContentPage>
