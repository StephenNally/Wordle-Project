            <Frame Grid.Row="2" Grid.Column="3" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <Frame Grid.Row="2" Grid.Column="4" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <!--Row 4-->
            <Frame Grid.Row="3" Grid.Column="0" BackgroundColor="White" BorderColor="CadetBlue">
