            <!--ROw 6-->
            <Frame Grid.Row="5" Grid.Column="0" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <Frame Grid.Row="5" Grid.Column="1" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
