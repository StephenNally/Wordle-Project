<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Wordle Game"
             x:Class="Wordle_Project_Final.MainPage">

    <VerticalStackLayout>
        <Grid x:Name="GameGrid" HeightRequest="400" WidthRequest="380" Padding="8" ColumnSpacing="3" RowSpacing="3" HorizontalOptions="Center"
              RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*,*,*,*,*" >
            <!--Row 1-->
            <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <Frame Grid.Row="0" Grid.Column="2" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
