                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <Frame Grid.Row="1" Grid.Column="3" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <Frame Grid.Row="1" Grid.Column="4" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <!--Row 3-->
            <Frame Grid.Row="2" Grid.Column="0" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <Frame Grid.Row="2" Grid.Column="1" BackgroundColor="White" BorderColor="CadetBlue">
                <Label Text="" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
